source 'https://rubygems.org'

# Rails
gem 'rails', '3.2.8'

# Frontend
gem 'jquery-rails'

# Server 
gem 'thin'

# HTTParty
gem 'httparty'

# Development
group :development do
  gem 'mysql2'
  gem 'quiet_assets'
end

# Test
group :test do
  gem 'sqlite3'
end

# Production
group :production do
  gem 'mysql2'
end

# Assets
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end
