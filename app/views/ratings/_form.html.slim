- 1.upto(10).each do |i|
  = link_to ratings_path(:movie_id => movie.id, :value => i), :method => :post, :remote => true, :class => "js-star-hover", :"data-number" => "#{i}"   do
    = my_rating >= i ? fa_icon("star", class: "fa-2x rating__star--full") : fa_icon("star-o", class: "fa-2x rating__star--empty")